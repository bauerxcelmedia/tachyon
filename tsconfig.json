{
	"compilerOptions": {
		"target": "es2020",
		"strict": true,
		"preserveConstEnums": true,
		"noEmit": true,
		"sourceMap": false,
		"module": "ES2022",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"types": ["node"],
		"resolveJsonModule": true,
	},
	"exclude": ["node_modules"],
	"include": ["./src/**/*.ts", "./*.d.ts", "./tests/**/*.ts"],
}
